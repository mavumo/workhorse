                tags: "" ? [""] : [], // ["ui", "ux"]
                salary_timeframe: "" ? "" : "",
                salary_min: "",
                salary_max: ""
        }

        var jobs_box_count_label = "Browse {count} jobs";
        var open_jobs_newtab = "true" == 'true';

        var logged_user = "";
        var seeker_accounts_enabled = "true" == "true";

        var company_obj = "";

        var app = new Vue({
