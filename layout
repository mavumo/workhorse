                                categories: [],
                                secondary_categories: [],

                                hide: false,
                                open: false,
                                loading: false,
                                submitted: false,
                                email: "",
                                frequency: "weekly",
                                jobtype: "all",
                                location: "all",
                                category: "all",
                                secondary_category: "all",
                                other: "",
                                error: null,
                                server_error: null,
                                email_exists: false
                        },
                        jobalerts_labels: {
                                jobtype: "All jobs",
                                category: "All categories",
                                secondary_category: "All categories",
                                location: "All locations",
                                company: ""
                        },
                        notification: {
                                show: false,
